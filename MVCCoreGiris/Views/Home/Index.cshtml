@inject MVCCoreGiris.Interfaces.IWeatherService weatherService
@{
    ViewData["Title"] = "Home Page";
    string sicaklik;
    try
    {
        sicaklik = weatherService.Temperature("ankara") + "°C";
    }
    catch (Exception)
    {
        sicaklik = "N/A";
    }
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Deneme</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <mesaj kapat-goster="true">Hoşgeldiniz. Şanslı sayınız: @ViewBag.SansliSayi</mesaj>
    <div>Ankara'da hava sıcaklıgı: @sicaklik</div>
</div>

